@model List<AppMenusListDto>


<header>
    <nav>
        <div class="navbar-master bg-dark text-white">
            <div class="navbar-logo">
                <p> Akar Hastanesi  </p>
            </div>
            <div class="navbar-items">
                <ul>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            if (item.ChildMenus == null || item.ChildMenus.Count == 0)
                            {
                                <li>
                                    <a>@item.MenuName</a>
                                </li>
                            }
                            if (item.ChildMenus != null && item.ChildMenus.Count != 0)
                            {
                                <li>
                                    <a>@item.MenuName</a>
                                </li>
                                <div>
                                    <partial name="Partials/Navbar/LayoutNavbarPartial" model="@item.ChildMenus" />
                                </div>

                            }

                        }
                    }
                </ul>

            </div>
            <div class="navbar-personal">
                <p> Sag  menu </p>
            </div>

        </div>

    </nav>
</header>


